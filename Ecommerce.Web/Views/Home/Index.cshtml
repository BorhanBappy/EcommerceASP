@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<Ecommerce.Entity.Models.Product>

@{
    ViewData["Title"] = "Home Page";
}

<div style="background-color: #08618d;">
    <div class="container text-white py-5">
        <div class="row align-items-center g-5">
            <div class="col-md-6">
                <h1 class="mb-5 display-2"><strong>Best Store of Electronics</strong></h1>
                <p>
                    Find a large selection of newest electronic devices from most popular
                    brands and with affordable prices.
                </p>
            </div>
            <div class="col-md-6 text-center">
                <img src="/images/hero.png" class="img-fluid" alt="hero"/>
            </div>
        </div>
    </div>
</div>


<div class="bg-light">
    <div class="container py-4">
        <h2 class="pb-4 text-center">Newest Products</h2>

        <div class="row mb-5 g-4">
            @foreach (var product in Model)
            {
                <div class="col-lg-3 col-md-6">
                    <div class="card h-100 shadow-sm border-0 hover-zoom">
                        <div class="position-relative">
                            <img src="/products/@product.ImageFileName" class="card-img-top p-3" alt="@product.Name"
                                 style="height: 220px; object-fit: contain;"/>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="text-muted mb-2">
                                <small>Brand: <strong>@product.Brand</strong></small><br/>
                                <small>Category: <strong>@product.Category</strong></small>
                            </p>
                            <h4 class="text-primary mt-auto">@(product.Price) <span class="text-danger">৳</span></h4>
                        </div>
                        <div class="card-footer bg-transparent border-0 d-flex flex-column gap-2 p-3">
                            <a class="btn btn-outline-primary btn-sm w-100"
                               asp-controller="Store"
                               asp-action="Details"
                               asp-route-id="@product.Id">
                                <i class="bi bi-eye"></i> View Details
                            </a>
                            <button type="button" class="btn btn-warning btn-sm w-100"
                                    onclick="addToCart(this, '@product.Id')">
                                <i class="bi bi-cart-plus"></i> Add to Cart
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<script>

</script>